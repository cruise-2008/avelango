@{
    if (!ViewBag.Refresh) { Layout = null; }
}

<div ng-controller="RemoveFormController as recover" class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="images/logo.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">PASSWORD RESET</p>
            <form role="form" name="recover.recoverForm" novalidate="" class="form-validate" ng-submit="recover.login()">
                <p class="text-center">Fill with your mail to receive instructions on how to reset your password.</p>
                <div class="form-group has-feedback">
                    <label class="text-muted">Email address</label>
                    <input type="email" name="email" placeholder="Enter email" autocomplete="off" ng-model="recover.accaunt.email" required="" class="form-control" ng-pattern="/^([a-z0-9_-]+\.)*[a-z0-9_-]+&#64[a-z0-9_-]+(\.[a-z0-9_-]+)*\.[a-z]{2,6}$/i"/>
                    <span class="fa fa-envelope form-control-feedback text-muted"></span>
                    <span ng-show="recover.recoverForm.accaunt_email.$dirty &amp;&amp; recover.recoverForm.accaunt_email.$error.required" class="text-danger">This field is required</span>
                    <span ng-show="recover.recoverForm.accaunt_email.$dirty &amp;&amp; recover.recoverForm.accaunt_email.$error.email" class="text-danger">This field must be a valid email address</span>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Reset</button>
            </form>
            <div ng-show="recover.authMsg" class="alert alert-danger text-center" style="margin-top: 10px">{{recover.authMsg}}</div>
        </div>
    </div>
    <!-- END panel-->
    <div class="p-lg text-center">
        <span>&copy;</span>
        <span ng-bind="app.year"></span>
        <span>-</span>
        <span ng-bind="app.name"></span>
        <br />
        <span ng-bind="app.description"></span>
    </div>
</div>

